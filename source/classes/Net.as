package classes{		import flash.net.URLLoader;	import flash.events.Event;	import flash.net.URLRequest;	public class Net 	{		private static var BASE_URL:String = "http://www.fatesoftware.com/casino/index.php";		private static var callback:Function;				public static var command:Array;		private static var data:URLLoader;				public static function Initialize()		{			command = new Array();		}				public static function AddAction(command:String, value:String)		{			Net.command[Net.command.length] = command+"="+value;		}				public static function Send(callback:Function=null)		{			Net.callback = callback;						data = new URLLoader();			data.addEventListener(Event.COMPLETE, onResponse);						var commands:String = "";			for (var n:int = 0; n < command.length; n++)			{				commands += (n==0?"?":"&") + command[n];			}						data.load(new URLRequest(BASE_URL+commands));						command = [];		}		public static function Contains(s:String):Boolean		{			if (data == null) return false;			var buffer:String = data.data;			if (buffer.indexOf(s) >= 0) return true;			return false;		}		public static function Get(tag:String):String		{			return Game.ParseXML(data.data, tag);		}				private static function onResponse(e:Event)		{			data.removeEventListener(Event.COMPLETE, onResponse);			if (callback != null) callback(e);		}	}	}