package classes{	import flash.media.Sound;	import flash.media.SoundTransform;	import flash.events.Event;	import flash.utils.Timer;	import flash.events.TimerEvent;		public class SoundObject 	{		private var sound:Sound;		private var transform:SoundTransform;		private var callback:Function;		private var soundLength:Number = 1000;				public function SoundObject(snd:String, delay:int, onCompleteCallback:Function) 		{			callback = onCompleteCallback;			transform = new SoundTransform();						if (snd == "Buzzer") 			{				sound = Game.GetSound("SFX_Buzzer") as Sound;			}			if (snd == "Coins") 			{				sound = Game.GetSound("SFX_Coins") as Sound;			}			if (snd == "Flip")			{				sound = Game.GetSound("SFX_Flip") as Sound;				transform.volume = 0.3;			}			if (snd == "Swoosh")			{				sound = Game.GetSound("SFX_Swoosh") as Sound;				transform.volume = 0.6;			}			if (snd == "Click")			{				sound = Game.GetSound("SFX_Click") as Sound;			}						var t:Timer = new Timer(delay,1);			t.addEventListener(TimerEvent.TIMER_COMPLETE, onComplete);			t.start();		}		private function onCallback(e:TimerEvent)		{			(e.target as Timer).removeEventListener(TimerEvent.TIMER_COMPLETE, onCallback);			callback();		}		private function onComplete(e:TimerEvent)		{			(e.target as Timer).removeEventListener(TimerEvent.TIMER_COMPLETE, onComplete);			(e.target as Timer).stop();						if (Game.IsSoundEnabled()) 			{				sound.play(0,0,transform);			}			if (callback != null)			{				var t:Timer = new Timer(soundLength,1);				t.addEventListener(TimerEvent.TIMER_COMPLETE, onCallback);				t.start();			}		}	}	}