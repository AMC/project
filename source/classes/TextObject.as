package classes {		import flash.text.TextField;	import flash.text.TextFormat;	import flash.geom.Point;	import flash.text.TextFieldAutoSize;	public class TextObject extends GameObject	{		private var text:TextField;				public function TextObject() 		{			text = new TextField();			text.selectable = false;			addChild(text);		}				public override function Destroy()		{			super.Destroy();						if (text != null) text = null;		}				public function setText(message:String) { text.htmlText = message; }		public function setTextFormat(format:TextFormat, startIndex:int = -1, endIndex:int = -1) { text.setTextFormat(format, startIndex, endIndex); }		public function setSelectable(b:Boolean) { text.selectable = b; }		public function setAutoSize(format:String) { text.autoSize = format; }				public override function getWidth() : Number { return text.width; }		public override function getHeight() : Number { return text.height; }				public override function setDimensions(Width:Number, Height:Number) { text.width = Width; text.height = Height; }		public override function setScale(num:Number) { text.scaleX = num; text.scaleY = num; }		public override function setWidth(Width:Number) { text.width = Width; }		public override function setHeight(Height:Number) { text.height = Height; }		public override function setRectangle(Left:Number, Top:Number, Width:Number, Height:Number) { x = Left; y = Top; setDimensions(Width,Height); }				public function getTextHeight() : Number { return text.textHeight; }		public function getTextWidth() : Number { return text.textWidth; }		public function getTextDimensions() : Point { return new Point(getTextWidth(), getTextHeight()); }	}}