package classes{		import flash.text.TextFormat;	import flash.display.MovieClip;	public class InfoBox extends MovieClip	{		private static var container:InfoBox;		private static var parentContainer:GameObject;				private static const TL:int = 0;		private static const T:int = 1;		private static const TR:int = 2;		private static const L:int = 3;		private static const C:int = 4;		private static const R:int = 5;		private static const BL:int = 6;		private static const B:int = 7;		private static const BR:int = 8;				public static function Initialize(layer:GameObject)		{			parentContainer = layer;			container = new InfoBox();		}		public static function SetPosition(X:Number, Y:Number)		{			container.setPosition(X,Y);		}		public static function Show(msg:String, X:Number, Y:Number)		{			container.message.setText(msg);			container.message.setTextFormat(container.messageTF);						container.width = container.message.getTextWidth() + 42;			container.height = container.message.getTextHeight() + 42;			container.setPosition(X,Y);						var theight = container.message.getTextHeight();			var twidth = container.message.getTextWidth();						container.piece[0].setPosition(0,0);						container.piece[1].setPosition(21,0);						container.piece[2].setPosition(twidth-21,0);			container.piece[3].setPosition(0,21);						container.piece[4].setPosition(21,21);					container.piece[5].setPosition(twidth-21,21);			container.piece[6].setPosition(0,theight-21);				container.piece[7].setPosition(21,theight-21);			container.piece[8].setPosition(twidth-21,theight-21);						container.piece[C].scaleX = container.width / 36;			container.piece[C].scaleY = container.height / 36;						if (!parentContainer.contains(container)) parentContainer.addChild(container);		}		public static function Hide()		{			if (parentContainer.contains(container)) parentContainer.removeChild(container);		}						private var message:TextObject;		private var messageTF:TextFormat;		private var piece:Array;				public function InfoBox()		{			piece = new Array(9);			piece[0] = Game.GetClass("Over_TL");	piece[1] = Game.GetClass("Over_T");	piece[2] = Game.GetClass("Over_TR");			piece[3] = Game.GetClass("Over_L");		piece[4] = Game.GetClass("Over_C");	piece[5] = Game.GetClass("Over_R");			piece[6] = Game.GetClass("Over_BL");	piece[7] = Game.GetClass("Over_B");	piece[8] = Game.GetClass("Over_BR");			for (var n:int = 0; n < 9; n++) addChild(piece[n]);						message = new TextObject();			messageTF = new TextFormat("Impact", 12, 0xFFFFFF);			addChild(message);		}		public function setPosition(X:Number, Y:Number)		{			x = X; y = Y;		}	}}